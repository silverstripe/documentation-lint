{
    "name": "silverstripe/documentation-lint",
    "description": "An abstraction around various documentation linters to make linting documentation easy for commercially supported Silverstripe CMS modules.",
    "homepage": "https://silverstripe.org",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Silverstripe",
            "homepage": "https://silverstripe.com"
        }
    ],
    "require": {
        "silverstripe/markdown-php-codesniffer": "^1",
        "slevomat/coding-standard": "^8.14"
    },
    "bin": [
        "bin/doclint"
    ],
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
